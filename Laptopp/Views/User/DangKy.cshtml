@model Laptopp.Models.NguoiDung
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(false)
        <tr>
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TaiKhoan") @*@ViewData["err2"]*@
                @Html.ValidationMessageFor(model => model.CustID, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Họ tên:</td>
            <td>
                @Html.TextBox("HoTen") @*@ViewData["err1"]*@
                @Html.ValidationMessageFor(model => model.UserName, "(*)", new { @class = "text-danger" })
            </td>
        </tr>    
        <tr>
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Password") @*@ViewData["err3"]*@
                @Html.ValidationMessageFor(model => model.Password, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                @Html.TextBox("Email") @*@ViewData["err5"]*@
                @Html.ValidationMessageFor(model => model.Email, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("Phone") @*@ViewData["err6"]*@
                @Html.ValidationMessageFor(model => model.Phone, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="Address" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>


